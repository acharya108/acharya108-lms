cat > backend/.env.example << 'EOF'
# backend/.env.example
# Template for environment variables
# Copy this to .env and fill in actual values

# =============================================================================
# DATABASE CONFIGURATION (NeonDB)
# =============================================================================

DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@host:5432/database?sslmode=require&channel_binding=require
DATABASE_URL_SYNC=postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true&connection_limit=1
DATABASE_URL_UNPOOLED=postgresql://user:password@host:5432/database?sslmode=require

# =============================================================================
# API CONFIGURATION
# =============================================================================

ALLOWED_ORIGINS=http://localhost:5173,https://your-domain.vercel.app
DEBUG=True

# =============================================================================
# SMTP EMAIL CONFIGURATION
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-16-char-app-password
EMAIL_FROM=your-email@yourdomain.com
SMTP_FROM_EMAIL=your-email@yourdomain.com
SMTP_FROM_NAME=Your App Name

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

JWT_SECRET=generate-random-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
EOF